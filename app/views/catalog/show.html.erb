<% @page_title = t('blacklight.show.page_title.title', date_issued: @document['date_issued_display'].first, issue_vol_iss: @document.fetch('issue_vol_iss_display', []).first, issue_sequence: @document['issue_sequence'], application_name: application_name) %>

<%= replace :head do %>
  <%= link_to_repository(@document) %>
  <%= link_to_manifest(@document) %>
  <%= render partial: 'document_share_metadata' %>
<% end %>

<%= replace :search_navbar do %>
  <div class="navigation-toolbar">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-7 col-sm-7 col-xs-12 navigate-issue">
          <% if current_search_session %>
            <%= link_back_to_catalog class: 'btn btn-search-primary', label: back_to_results_label %>
          <% end %>
          <a class="btn btn-link btn-issue-link" href="<%= search_catalog_url document_to_date_params(@document) %>">
            <span><%= issue_title(@document) %></span> 
          </a>
          <span class=""><i class="glyphicon glyphicon glyphicon-chevron-right"></i></span>
          <span class="">Image <%= current_image_sequence(@document) %></span>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-12 navigate-pages">
          <%= link_to_previous_issue_page @previous_page %>
          <span class="current-page-number"><span class="sr-only">Image </span><%= current_image_sequence(@document) %> of <%= @issue_data[:pages].size %></span>
          <%= link_to_next_issue_page @next_page %>

           
        </div>
      </div>
    </div>
  </div>
<% end %>

<h1 class="sr-only"><%= @document['date_issued_display'].first %> -  Issue <%= @document.fetch('issue_no_t', ['-']).first %> - Image <%= current_image_sequence(@document) %></h1>

<h2 class="sr-only">Page Image</h2>
<div id="image-viewer-wrap">
  <div class="image-viewer-toolbar">
    <div class="container" style="padding: 0">
      <div class="col-md-3 col-sm-4 hidden-xs" style="white-space: nowrap">

        <button class="btn btn-default btn-sm action-rotate-left"><span class="sr-only">Left </span><i class="glyphicon glyphicon-hand-left"></i></button>
        <label class="sr-only" style="text-align: center; margin-right: 0">Rotate</label>
        <button class="btn btn-default btn-sm action-rotate-right"><span class="sr-only">Right </span><i class="glyphicon glyphicon-hand-right"></i></button></button>
        &nbsp;&nbsp;
        <label><input type="radio" name="toggle-mode" class="action-toggle-mode" value="pan" checked="checked" /> Pan</label>
        <label><input type="radio" name="toggle-mode" class="action-toggle-mode" value="select" /> Select</label>
      </div>
      <div class="col-md-6 col-sm-4 col-xs-6">
        <div class="zoom-toolbar center-block">
          <button id="action-zoom-out" class="btn btn-action action-zoom-out"><%= raw(t('views.issue.zoom_out')) %></button>
          <span class="span-zoom-status">100%</span>
          <button id="action-zoom-in" class="btn btn-action action-zoom-in"><%= raw(t('views.issue.zoom_in')) %></button>
        </div>
      </div>
      <div class="col-md-3 col-sm-4 col-xs-6 align-right">
        <% if true || highlights_available? %>
          <label><input type="checkbox" class="action-toggle-highlight" <%= highlights_visible? ? 'checked="checked"' : '' %> /> <%= t('views.issue.search_highlights') %></label>
        <% end %>
      </div>
    </div>
  </div>
  <div id="image-viewer" data-words="<%= process_highlighted_words(@document) %>" data-identifier="<%= iiif_identifier(@document) %>" data-highlighting="<%= highlights_visible? ? 'true' : 'false' %>"></div>
  <p class="sr-only">scanned image of the page</p>
</div>


<div class="container container-morph">
  <div class="col-md-4 col-md-push-8 col-sm-4 col-sm-push-8 col-xs-12 page-options">
    <h2 class="sr-only">Page Options</h2>
    <div class="panel panel-actions-page">
      <div class="panel-heading">
        <h3>Download this Page</h3>
      </div>
      <div class="panel-body">
        <div class="btn-group-vertical action-group" role="group">
          <a class="btn btn-default btn-action action-download-view" href="#"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> Download Current View <span class="extension">JPG</span></a>
          <a class="btn btn-default btn-action" href="<%= download_pdf_link @document, 'page_identifier' %>"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Download PDF <span class="extension">PDF</span></a>
          <a class="btn btn-default btn-action" download="<%= @document.id %>.jpg" href="<%= document_image_src @document, size: 'full' %>"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> Download Image <span class="extension">JPG</span></a></li>
          <a class="btn btn-default btn-action" href="<%= download_text_solr_document_path @document %>"><span class="glyphicon glyphicon-align-left" aria-hidden="true"></span> Download Text <span class="extension">TXT</span></a></li>
        </div>
      </div>
    </div>

    <div class="panel panel-actions-issue">
      <div class="panel-heading">
        <h3>Download this Issue</h3>
      </div>
      <div class="panel-body">
        <div class="btn-group-vertical action-group" role="group">
          <a class="btn btn-default btn-action action-download-pdf" href="<%= download_pdf_link @document, 'issue_identifier' %>"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Download PDF <span class="extension"><%= @issue_data[:pages].size %> pages</span></a>
          <a class="btn btn-default btn-action" href="<%= download_issue_text_solr_document_path @document %>"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Download Text <span class="extension">ZIP</span></a>
        </div>
      </div>
    </div>

    <div class="panel panel-actions-share">
      <div class="panel-heading">
        <h3>Share</h3>
      </div>
      <div class="panel-body">
        <form>
          <div class="form-group">
            <label for="permalink sr-only">Permalink for this page</label>
            <input type="text" class="form-control" id="permalink" value="<%= solr_document_url(@document) %>" readonly="readonly" onclick="this.select()" />
          </div>
          <button class="btn btn-action action-copy-permalink">Copy Link</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-md-pull-4 col-sm-8 col-sm-pull-4 col-xs-12">
    <div id="document" class="document <%= render_document_class %>" itemscope  itemtype="<%= @document.itemtype %>" style="background: white; padding: 20px">
      <div id="doc_<%= @document.id.to_s.parameterize %>">
        <%= render_document_partials @document, blacklight_config.view_config(:show).partials %>
      </div>
    </div>
  </div>
</div>

<script>
$().ready(function() {
  $(".image-viewer-toolbar").stick_in_parent();
  $(".action-copy-permalink").on('click', function(e) {
    e.preventDefault();
    $("#permalink").select();
    document.execCommand('copy');
  })
});
</script>
<%= render partial: 'back_to_top' %>